{{ template "header.templ" . }}
<div class="container">
	<form id="signupForm">
		<input type="email" id="email" name="email" placeholder="E-mail..." /><br />
		<input type="text" id="name" name="username" placeholder="Username..." /><br />
		<input type="password" id="pwd" name="password" placeholder="ParolÄƒ..." /><br />
		<input type="submit" value="Trimite" /><br />
	</form>

	<script>
		$("#signupForm").submit((e) => {
			e.preventDefault();
			let email = $("#signupForm #email").val();
			let username = $("#signupForm #name").val();
			let password = $("#signupForm #pwd").val();

			$.post("/api/auth/signup", { email, username, password }, (data, status) => {
				console.log("DATA:", data, "STATUS:", status);
				window.location.replace("/");
			}).fail((jq, status, err) => {
				console.error("JQ:", jq, "STATUS:", status, "ERR:", err);
			});
			console.log(username, password);
		});
	</script>
</div>
{{ template "footer.templ" . }}
