{{ template "util/header" . }}

<div class="container">
	<h1>Stare task-uri</h1>

	<table class="table">
		<thead class="thead-dark">
			<tr>
				<th scope="col">
					ID
				</th>
				<th scope="col">
					Autor
				</th>
				<th scope="col">
					ProblemÄƒ
				</th>
				<th scope="col">
					Status
				</th>
				<th scope="col">
					Scor
				</th>
			</tr>
		</thead>
		<tbody>
			{{ with .Tasks }}
				{{ range . }}
					<tr style="{{ gradient .Score 100 }}">
					<th scope="row">
						{{- .ID -}}
					</th>
					<td>
						{{- .User.Name -}}
					</td>
					<td>
						<a href="/probleme/{{.Problem.ID}}">{{- .Problem.Name -}}</a>
					</td>
					<td>
						<a href="/tasks/{{.ID}}">{{- taskStatus .Status -}}</a>
					</td>
					<td>
						{{- .Score -}}
					</td>
				</tr>
				{{ end }}
			{{ else }}
				<td>
					<center> Couldn't find anything </center>
				</td>
			{{ end }}
		</tbody>
	</table>
</div> 

{{ template "util/footer" . }}
