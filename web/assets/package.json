{
	"name": "kilossets",
	"version": "1.0.0",
	"description": "Asset 'pipeline' for Kilonova",
	"scripts": {
		"watchCSS": "echo 'WARNING: All fonts WILL break.' && tailwindcss --postcss ./postcss.config.js -i tailwind.css --watch -o ../static/styles.css",
		"buildCSS": "TAILWIND_MODE=build postcss tailwind.css -o ../static/styles.css",
		"prodCSS": "NODE_ENV=production yarn buildCSS",
		"buildJS": "esbuild app.ts --bundle --target=es2020 --outfile=../static/bundle.js --global-name=bundled --sourcemap=inline ",
		"prodJS": "esbuild app.ts  --bundle --target=es2020 --outfile=../static/bundle.js --global-name=bundled --sourcemap --minify ",
		"vendor": "esbuild vendored.ts --bundle --target=es2020 --outfile=../static/vendored.js --global-name=vendored --sourcemap --minify",
		"prod": "yarn prodJS && yarn prodCSS",
		"build": "yarn buildJS && yarn buildCSS",
		"esv": "esbuild --version"
	},
	"license": "",
	"private": true,
	"type": "module",
	"dependencies": {
		"@fontsource/noto-sans": "^5.1.1",
		"@fortawesome/fontawesome-free": "^6.7.2",
		"@grafana/faro-web-sdk": "^1.12.2",
		"@grafana/faro-web-tracing": "^1.12.2",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@types/codemirror": "^5.60.15",
		"@types/js-cookie": "^3.0.6",
		"@types/lodash-es": "^4.17.12",
		"@types/preact-custom-element": "^4.0.4",
		"@types/sprintf-js": "^1.1.4",
		"autoprefixer": "^10.4.20",
		"codemirror": "^5.65.18",
		"cssnano": "^7.0.6",
		"dayjs": "^1.11.13",
		"esbuild": "^0.24.2",
		"highlightjs-copy": "^1.0.6",
		"htmx.org": "2.0.3",
		"idiomorph": "^0.4.0",
		"js-base64": "^3.7.7",
		"js-cookie": "^3.0.5",
		"katex": "^0.16.19",
		"lodash-es": "^4.17.21",
		"notyf": "^3.10.0",
		"postcss": "^8.4.49",
		"postcss-cli": "^11.0.0",
		"postcss-import": "^16.1.0",
		"postcss-url": "^10.1.3",
		"preact": "^10.25.4",
		"preact-custom-element": "^4.3.0",
		"query-string": "^9.1.1",
		"sprintf-js": "^1.1.3",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.7.2"
	}
}
